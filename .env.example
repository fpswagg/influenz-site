# ============================================
# CONTACT FORM CONFIGURATION
# ============================================
# Email where contact form submissions will be sent
CONTACT_FORM_RECIPIENT_EMAIL=contact@influenz.cm

# Email service configuration (if using email service)
# Options: smtp, resend, sendgrid, mailgun, etc.
EMAIL_SERVICE=smtp

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=iNFLUENZ
SMTP_FROM_EMAIL=noreply@influenz.cm

# Resend API Key (if using Resend)
RESEND_API_KEY=re_your_api_key_here

# SendGrid API Key (if using SendGrid)
SENDGRID_API_KEY=SG.your_api_key_here

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

